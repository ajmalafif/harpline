article.post
  .container
    .articles
      for post, slug in public.blog._data
        if post.layout !== false
          article
              .row
                a(href="/blog/#{ slug }")                    
                    .col-sm-8.work-title
                      h1.sm= post.title                            
                      if post.description
                        p= post.description
                    .col-sm-4.work-image
                      h2.xs.date #{ post.date }
