.container
  .articles
    for post, slug in public.work._data
      if post.layout !== false && article.published!==false || environment=='development'
        article
            .row
              a(href="/work/#{ slug }" class="#{ article.published==false ? 'unpublished' : '' }") #{ article.title }                    
                  .col-sm-8.work-title
                    h1.sm= post.title                            
                    if post.description
                      p= post.description
                  .col-sm-4.work-image
                    //- h2.xs.date #{ post.date }
                    img(src='/images/#{ public.authors._data[post.author].photo }', alt='#{ public.authors._data[post.author].name }', class='author')